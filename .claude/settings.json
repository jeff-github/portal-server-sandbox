{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(*dart test*)",
      "Bash(*dart run*)",
      "Bash(*dart pub*)",
      "Bash(*dart analyze*)",
      "Bash(*flutter test*)",
      "Bash(*flutter pub*)",
      "Bash(*flutter analyze*)",
      "Bash(*genhtml*)",
      "Bash(*git status*)",
      "Bash(*git diff*)",
      "Bash(*git log*)",
      "Bash(*git add*)",
      "Bash(*git commit*)",
      "Bash(*git push*)",
      "Bash(*git pull*)",
      "Bash(*git checkout*)",
      "Bash(*git branch*)",
      "Bash(*git fetch*)",
      "Bash(*gh *)",
      "Bash(*cat *)",
      "Bash(*tail *)",
      "Bash(*head *)",
      "Bash(*wc *)",
      "Bash(*ls *)",
      "Bash(*cd *)",
      "Bash(*grep*)",
      "Bash(*coverage*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/session-start.sh"
          }
        ]
      }
    ]
  },
  "extraKnownMarketplaces": {
    "anspar-cc-plugins": {
      "source": {
        "source": "directory",
        "path": "./tools/anspar-cc-plugins"
      }
    }
  },
  "enabledPlugins": {
    "plugin-wizard@anspar-cc-plugins": true,
    "linear-api@anspar-cc-plugins": true,
    "workflow@anspar-cc-plugins": true,
    "simple-requirements@anspar-cc-plugins": true,
    "requirement-traceability@anspar-cc-plugins": true,
    "spec-compliance@anspar-cc-plugins": true,
    "compliance-verification@anspar-cc-plugins": true,
    "traceability-matrix@anspar-cc-plugins": true,
    "debugging-toolkit@claude-code-workflows": true,
    "unit-testing@claude-code-workflows": true,
    "tdd-workflows@claude-code-workflows": true,
    "cicd-automation@claude-code-workflows": true
  }
}
