{
  "name": "linear-req-inserter",
  "displayName": "Linear Requirement Inserter",
  "description": "Insert requirement references from Linear in-progress tickets into your code",
  "version": "0.1.0",
  "publisher": "clinical-diary",
  "repository": {
    "type": "git",
    "url": "https://github.com/faisyrs/diary_prep",
    "directory": "tools/vscode-linear-req-inserter"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "linear",
    "requirements",
    "traceability",
    "project-management"
  ],
  "activationEvents": [
    "onCommand:linearReqInserter.insertRequirements",
    "onLanguage:sql",
    "onLanguage:dart",
    "onLanguage:python",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "linearReqInserter.insertRequirements",
        "title": "Insert Requirements from Linear Ticket"
      }
    ],
    "keybindings": [
      {
        "command": "linearReqInserter.insertRequirements",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "linearReqInserter.insertRequirements",
          "group": "9_cutcopypaste",
          "when": "editorTextFocus"
        }
      ]
    },
    "configuration": {
      "title": "Linear Requirement Inserter",
      "properties": {
        "linearReqInserter.apiToken": {
          "type": "string",
          "default": "",
          "description": "Linear API token (get from https://linear.app/settings/api)",
          "markdownDescription": "Linear API token. Get yours from [Linear Settings](https://linear.app/settings/api)"
        },
        "linearReqInserter.teamId": {
          "type": "string",
          "default": "",
          "description": "Linear team ID (optional, for filtering)"
        },
        "linearReqInserter.specPath": {
          "type": "string",
          "default": "${workspaceFolder}/spec",
          "description": "Path to specification directory containing requirement files"
        },
        "linearReqInserter.commentFormat": {
          "type": "string",
          "enum": [
            "multiline",
            "singleline"
          ],
          "default": "multiline",
          "description": "How to format multiple requirements (multiline: one per line, singleline: comma-separated)"
        },
        "linearReqInserter.includeTicketLink": {
          "type": "boolean",
          "default": false,
          "description": "Include Linear ticket link in comment"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.x",
    "@typescript-eslint/parser": "^8.x",
    "esbuild": "^0.25.11",
    "eslint": "^9.x",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.0"
  },
  "dependencies": {
    "@linear/sdk": "^20.0.0"
  }
}
