{
  // ⚠️ FIRST-TIME SETUP REQUIRED: Run tools/dev-env/setup.sh BEFORE opening in container!
  // See: .devcontainer/README.md for complete instructions.
  "name": "Clinical Diary - Developer",
  "dockerComposeFile": "../../tools/dev-env/docker-compose.yml",
  "service": "dev",
  "workspaceFolder": "/workspace/src",
  
  // Run prerequisite checks on host BEFORE attempting build
  "initializeCommand": "${localWorkspaceFolder}/.devcontainer/check-prerequisites.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        // Flutter & Dart
        "Dart-Code.flutter",
        "Dart-Code.dart-code",

        // JavaScript/TypeScript
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",

        // Python
        "ms-python.python",
        "ms-python.vscode-pylance",

        // Git
        "eamodio.gitlens",
        "github.vscode-pull-request-github",

        // Docker
        "ms-azuretools.vscode-docker",

        // General productivity
        "streetsidesoftware.code-spell-checker",
        "editorconfig.editorconfig",
        "gruntfuggly.todo-tree",

        // Markdown
        "yzhang.markdown-all-in-one",
        "davidanson.vscode-markdownlint",

        // AI Assistance (optional)
        "github.copilot"
      ],

      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "args": ["-l"]
          }
        },

        // Flutter settings
        "dart.flutterSdkPath": "/opt/flutter",
        "dart.lineLength": 100,
        "dart.previewFlutterUiGuides": true,

        // Editor settings
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },

        // File associations
        "files.associations": {
          "*.yaml": "yaml",
          "*.yml": "yaml",
          "Dockerfile*": "dockerfile"
        },

        // Git settings
        "git.autofetch": true,
        "git.confirmSync": false,

        // Role identification
        "window.title": "[DEV] ${dirty}${activeEditorShort}${separator}${rootName}"
      }
    }
  },

  "forwardPorts": [3000, 5000, 8080],

  "postCreateCommand": "git config core.hooksPath .githooks && echo '✅ Git hooks enabled' && echo '✅ Developer environment ready! Run: doppler login && doppler setup' || echo '⚠️ Failed to enable git hooks'",

  "remoteUser": "ubuntu"
}
