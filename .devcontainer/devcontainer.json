{
  // ============================================================
  // ⚠️ FIRST-TIME SETUP REQUIRED - READ THIS BEFORE OPENING! ⚠️
  // ============================================================
  //
  // DO NOT open in Dev Container until you've run setup:
  //   1. Close VS Code
  //   2. cd tools/dev-env
  //   3. ./setup.sh
  //   4. Wait for completion (5-15 minutes)
  //   5. NOW open in Dev Container
  //
  // Why? The base Docker image must be built locally first.
  // See: .devcontainer/README.md for complete instructions.
  // ============================================================

  "name": "Clinical Diary - Developer (Default)",
  "dockerComposeFile": "../tools/dev-env/docker-compose.yml",
  "service": "dev",
  "workspaceFolder": "/workspace/src",

  // Run prerequisite checks on host BEFORE attempting build
  "initializeCommand": "${localWorkspaceFolder}/.devcontainer/check-prerequisites.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        // Flutter & Dart
        "Dart-Code.flutter",
        "Dart-Code.dart-code",

        // JavaScript/TypeScript
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",

        // Python
        "ms-python.python",
        "ms-python.vscode-pylance",

        // Docker
        "ms-azuretools.vscode-docker",

        // Git
        "eamodio.gitlens",
        "github.vscode-pull-request-github",

        // GitHub Copilot (if available)
        "github.copilot",

        // General productivity
        "streetsidesoftware.code-spell-checker",
        "gruntfuggly.todo-tree",

        // Markdown
        "yzhang.markdown-all-in-one"
      ],

      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "args": ["-l"]
          }
        },

        // Editor settings
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",

        // Flutter settings
        "dart.flutterSdkPath": "/opt/flutter",

        // Role identification
        "window.title": "[DEV] ${dirty}${activeEditorShort}${separator}${rootName}"
      }
    },

    "codespaces": {
      "repositories": {
        "yourorg/*": {
          "permissions": {
            "contents": "write",
            "pull_requests": "write"
          }
        }
      }
    }
  },

  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    }
  },

  "forwardPorts": [3000, 5000, 8080],

  "portsAttributes": {
    "3000": {
      "label": "Flutter Web",
      "onAutoForward": "notify"
    },
    "5000": {
      "label": "API Server",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Preview",
      "onAutoForward": "openBrowser"
    }
  },

  "postCreateCommand": "git config core.hooksPath .githooks && echo '✅ Git hooks enabled' && cat /etc/motd && echo '' && echo '✅ Developer environment ready! Run: flutter --version' || echo '⚠️ Failed to enable git hooks'",

  "remoteUser": "ubuntu",

  "updateContentCommand": "git pull",

  "containerEnv": {
    "DOPPLER_PROJECT": "clinical-diary-dev",
    "DOPPLER_CONFIG": "dev"
  }
}
