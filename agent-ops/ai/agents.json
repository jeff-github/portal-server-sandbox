{
  "agents": [
    {
      "name": "ai-coordination",
      "description": "Manages agent-ops system internals (sessions, diary, archives)",
      "instructions_file": "agent-ops/ai/AI_COORDINATION.md",
      "purpose": "Handles session lifecycle so orchestrators can focus on core tasks",
      "when_to_use": [
        "Starting new feature/task",
        "Recording milestone",
        "Logging user question",
        "Completing feature"
      ],
      "input_format": {
        "start_feature": {"event": "start_feature", "description": "string", "tickets": ["#CUR-XXX"]},
        "milestone": {"event": "milestone", "summary": "string"},
        "question": {"event": "question", "question": "string"},
        "complete_feature": {"event": "complete_feature", "summary": "string"}
      },
      "output_format": {
        "action": "string (session_created|milestone_recorded|question_logged|feature_archived|error)",
        "session": "string (path, optional)",
        "instruction": "string (directive for orchestrator)"
      }
    }
  ],
  "orchestrator_guide": "agent-ops/ai/ORCHESTRATOR.md",
  "version": "1.0"
}
